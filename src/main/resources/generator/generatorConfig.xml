<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3">
        <!-- 配置数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://47.120.6.121:3306/KunMall"
                        userId="KunMallAdmin"
                        password="1234">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>

        <!-- 配置生成的Java模型（实体类） -->
        <javaModelGenerator targetPackage="com.suxton.kunmall.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 配置生成的Mapper接口 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- 配置生成的Mapper XML文件 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.suxton.kunmall.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- 配置要生成的表 -->
        <table tableName="Users" domainObjectName="User"/>
        <table tableName="CPU" domainObjectName="CPU"/>
        <table tableName="GPU" domainObjectName="GPU"/>
        <table tableName="Memory" domainObjectName="Memory"/>
        <table tableName="Drive" domainObjectName="Drive"/>
        <table tableName="Orders" domainObjectName="Orders"/>
        <table tableName="Recommends" domainObjectName="Recommends"/>
        <!-- 可以配置多个表 -->

    </context>
</generatorConfiguration>
